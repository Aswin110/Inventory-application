extends layout 
block content 

    h1= title

    form(method='POST')
        div.form-group
            label(for='name') Category name: 
            input#name.form-control(type='text', placeholder='Groceries, Musical instruments etc.' name='name' required value=(undefined===category? '' : category.name)) 
            label(for='description') Category description: 
            textarea#description.form-control(type='text', placeholder='Description about the category...' name='description' required)=(undefined===category? '' : category.description) 
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul 
         for error in errors
            li!=error.msg